<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.SettingFragment">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_marginTop="10dp"
                    android:fontFamily="@font/dmsans"
                    android:paddingLeft="10dp"
                    android:text="ADVANCE SETTING"
                    android:textColor="@color/colorMain"
                    android:textFontWeight="800"
                    android:textSize="22dp">
                </TextView>
            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="2dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/background_white_curb"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:paddingBottom="15dp">

                            <LinearLayout
                                android:layout_width="200dp"
                                android:layout_height="210dp"
                                android:gravity="center"
                                android:layout_weight="10"
                                android:orientation="vertical">

                                <androidx.cardview.widget.CardView xmlns:Card_View="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="170dp"
                                    android:layout_height="190dp"
                                    android:layout_margin="15dp"
                                    Card_View:cardBackgroundColor="#FFFFFF"
                                    Card_View:cardCornerRadius="15dp"
                                    Card_View:cardElevation="2dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:layout_marginLeft="6dp"
                                        android:gravity="center"
                                        android:orientation="vertical"
                                        android:padding="10dp">

                                        <ImageView
                                            android:layout_width="55dp"
                                            android:layout_height="55dp"
                                            android:src="@drawable/temperature" />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="15dp"
                                            android:fontFamily="@font/raleway"
                                            android:text="Auto Temp"
                                            android:textColor="#000000"
                                            android:textSize="17dp" />

                                        <TextView
                                            android:id = "@+id/auto_Temp"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="5dp"
                                            android:gravity="center"
                                            android:text="OFF"
                                            android:textColor="@color/colorMain"
                                            android:textSize="14dp" />

                                        <com.suke.widget.SwitchButton
                                            android:id="@+id/switch_autoTemp"
                                            android:layout_width="70dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="10dp" />

                                    </LinearLayout>

                                </androidx.cardview.widget.CardView>

                            </LinearLayout>
                            <LinearLayout
                            android:layout_width="200dp"
                            android:layout_height="210dp"
                            android:gravity="center"
                            android:layout_weight="10"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView xmlns:Card_View="http://schemas.android.com/apk/res-auto"
                                android:layout_width="170dp"
                                android:layout_height="190dp"
                                android:layout_margin="15dp"
                                Card_View:cardBackgroundColor="#FFFFFF"
                                Card_View:cardCornerRadius="15dp"
                                Card_View:cardElevation="2dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="6dp"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:padding="10dp">

                                    <ImageView
                                        android:layout_width="55dp"
                                        android:layout_height="55dp"
                                        android:src="@drawable/humidity" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="15dp"
                                        android:fontFamily="@font/raleway"
                                        android:text="Auto Humi"
                                        android:textColor="#000000"
                                        android:textSize="17dp" />

                                    <TextView
                                        android:id="@+id/auto_Humi"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:gravity="center"
                                        android:text="OFF"
                                        android:textColor="@color/colorMain"
                                        android:textSize="14dp" />

                                    <com.suke.widget.SwitchButton
                                        android:id="@+id/switch_autoHumi"
                                        android:layout_width="70dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp" />

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>
                            <LinearLayout
                            android:layout_width="200dp"
                            android:layout_height="210dp"
                            android:gravity="center"
                            android:layout_weight="10"
                            android:orientation="vertical">

                            <androidx.cardview.widget.CardView xmlns:Card_View="http://schemas.android.com/apk/res-auto"
                                android:layout_width="170dp"
                                android:layout_height="190dp"
                                android:layout_margin="15dp"
                                Card_View:cardBackgroundColor="#FFFFFF"
                                Card_View:cardCornerRadius="15dp"
                                Card_View:cardElevation="2dp">

                                <LinearLayout
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:layout_marginLeft="6dp"
                                    android:gravity="center"
                                    android:orientation="vertical"
                                    android:padding="10dp">

                                    <ImageView
                                        android:layout_width="45dp"
                                        android:layout_height="45dp"
                                        android:src="@drawable/ic_door" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="15dp"
                                        android:fontFamily="@font/raleway"
                                        android:text="Auto Door"
                                        android:textColor="#000000"
                                        android:textSize="17dp" />

                                    <TextView
                                        android:id="@+id/auto_Door"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="5dp"
                                        android:gravity="center"
                                        android:text="OFF"
                                        android:textColor="@color/colorMain"
                                        android:textSize="14dp" />

                                    <com.suke.widget.SwitchButton
                                        android:id="@+id/switch_autoDoor"
                                        android:layout_width="70dp"
                                        android:layout_height="wrap_content"
                                        android:layout_marginTop="10dp" />

                                </LinearLayout>

                            </androidx.cardview.widget.CardView>

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>

</FrameLayout>