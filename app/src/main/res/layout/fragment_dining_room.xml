<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Fragment.DiningRoomFragment">

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorPrimary"
        android:orientation="vertical"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="45dp"
                    android:background="@drawable/rectangle_btn_menu"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="visible">


                    <ImageView
                        android:layout_width="20dp"
                        android:layout_height="40dp"
                        android:paddingRight="5dp"
                        android:src="@drawable/temperature" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/temp_diningRoom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/dmsans"
                            android:text="35Â°C"
                            android:textColor="@color/colorMain"
                            android:textFontWeight="700"
                            android:textSize="21dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/dmsans"
                            android:text="Temperature"
                            android:textColor="@color/colorMain"
                            android:textFontWeight="400"
                            android:textSize="12dp" />

                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="130dp"
                    android:layout_height="45dp"
                    android:layout_marginLeft="30dp"
                    android:background="@drawable/rectangle_btn_menu"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:visibility="visible">

                    <ImageView
                        android:layout_width="30dp"
                        android:layout_height="40dp"
                        android:src="@drawable/humidity" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginLeft="10dp"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/humidity_diningRoom"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/dmsans"
                            android:text="90%"
                            android:textColor="@color/colorMain"
                            android:textFontWeight="700"
                            android:textSize="21dp" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/dmsans"
                            android:text="Humidity"
                            android:textColor="@color/colorMain"
                            android:textFontWeight="400"
                            android:textSize="12dp" />

                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <TextView
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="left"
                android:fontFamily="@font/dmsans"
                android:paddingLeft="10dp"
                android:text="Smart Control"
                android:textColor="@color/colorMain"
                android:textFontWeight="600"
                android:textSize="20dp">
            </TextView>
            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@drawable/background_solid_curb"
                    android:layout_marginTop="2dp"
                    android:layout_marginBottom="15dp"
                    >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:background="@drawable/background_white_curb"
                        android:paddingBottom="15dp"
                        >

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                >

                                <androidx.cardview.widget.CardView
                                    xmlns:Card_View="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="210dp"
                                    android:layout_margin="15dp"
                                    Card_View:cardCornerRadius="15dp"
                                    Card_View:cardBackgroundColor="#FFFFFF"
                                    Card_View:cardElevation="2dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        android:padding="10dp"
                                        android:gravity="center"
                                        android:layout_marginLeft="6dp"
                                        >

                                        <ImageView
                                            android:layout_width="55dp"
                                            android:layout_height="55dp"
                                            android:src="@drawable/ic_light"
                                            />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="LED Light"
                                            android:fontFamily="@font/raleway"
                                            android:textSize="17dp"
                                            android:textColor="#000000"
                                            android:layout_marginTop="15dp"
                                            />

                                        <TextView
                                            android:id="@+id/light_text_diningRoom"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="OFF"
                                            android:textSize="14dp"
                                            android:textColor="@color/colorMain"
                                            android:gravity="center"
                                            android:layout_marginTop="5dp"
                                            />

                                        <com.suke.widget.SwitchButton
                                            android:id="@+id/switch_light_diningRoom"
                                            android:layout_width="70dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="10dp"/>

                                    </LinearLayout>

                                </androidx.cardview.widget.CardView>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1"
                                android:orientation="vertical"
                                >
                                <androidx.cardview.widget.CardView
                                    xmlns:Card_View="http://schemas.android.com/apk/res-auto"
                                    android:layout_width="match_parent"
                                    android:layout_height="210dp"
                                    android:layout_margin="15dp"
                                    Card_View:cardCornerRadius="15dp"
                                    Card_View:cardBackgroundColor="#FFFFFF"
                                    Card_View:cardElevation="2dp">

                                    <LinearLayout
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:orientation="vertical"
                                        android:padding="10dp"
                                        android:gravity="center"
                                        android:layout_marginLeft="6dp"
                                        >

                                        <ImageView
                                            android:layout_width="52dp"
                                            android:layout_height="52dp"
                                            android:src="@drawable/ic_fan"
                                            />

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="Fan"
                                            android:fontFamily="@font/raleway"
                                            android:textSize="17dp"
                                            android:textColor="#000000"
                                            android:layout_marginTop="15dp"
                                            />

                                        <TextView
                                            android:id="@+id/fan_text_diningRoom"
                                            android:layout_width="match_parent"
                                            android:layout_height="wrap_content"
                                            android:text="OFF"
                                            android:textSize="14dp"
                                            android:textColor="@color/colorMain"
                                            android:gravity="center"
                                            android:layout_marginTop="5dp"
                                            />

                                        <com.suke.widget.SwitchButton
                                            android:id="@+id/switch_fan_diningRoom"
                                            android:layout_width="70dp"
                                            android:layout_height="wrap_content"
                                            android:layout_marginTop="10dp"/>

                                    </LinearLayout>

                                </androidx.cardview.widget.CardView>

                            </LinearLayout>

                        </LinearLayout>



                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="0dp"
                            android:layout_weight="1"
                            android:orientation="horizontal">
                        </LinearLayout>


                    </LinearLayout>

                </LinearLayout>
            </ScrollView>
        </LinearLayout>
    </RelativeLayout>

</FrameLayout>